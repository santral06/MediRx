<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView android:id="@+id/sectionTextView" 
        android:layout_width="fill_parent" 
        android:paddingLeft="8dip"
        android:layout_marginBottom="3dip"
        android:layout_height="wrap_content"
		android:text="A" 
		android:textStyle="bold"
		android:textSize="18sp"
		android:textColor="#ffffff"
		android:background="#39B6EF"
		android:visibility="gone"
	/>
     
     <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:id="@+id/infoRowContainer"
	>
	
	    <ImageView
	        
	        android:id="@+id/favImg"
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"	     
            android:layout_centerVertical="true"
	        android:layout_marginLeft="5dip"	        
	        android:layout_marginRight="5dip"
	        android:contentDescription="image"
	        android:focusable="false"
	        android:scaleType="fitCenter"
	       
	        android:visibility="visible" />
	    
	    <TextView
	        android:id="@+id/nickNameView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@id/favImg"
	        android:textStyle="bold"
	        android:textSize="20sp"
	        android:textColor="#576069"
	        android:text="Fullname" />
	  
	
	      <TextView
	        android:id="@+id/fullNameView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_below="@id/nickNameView"
	        android:layout_toRightOf="@id/favImg"
	        
	        android:textSize="14sp"
	        android:textColor="#576069"
	        android:text="Fullname" />
	</RelativeLayout>

</LinearLayout>